@model IEnumerable<BTLN3.Models.ChucVu>

@{
    ViewData["Title"] = "Index";
}

<h1>Bang Chức Vụ</h1>

<p>
    <a asp-action="Create">Create New</a>
    <a asp-action="Upload">Nhap Excel</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TenChucVu)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TenChucVu)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.MaChucVu">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.MaChucVu">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.MaChucVu">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
