@model IEnumerable<BTLN3.Models.TinhTrang>

@{
    ViewData["Title"] = "Index";
}

<h1>Bảng Tình Trạng</h1>

<p>
    <a asp-action="Create">Nhập Mới</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MaTinhTrang)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TenND)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NoidungTT)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MaTinhTrang)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TenND)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NoidungTT)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.MaTinhTrang">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.MaTinhTrang">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.MaTinhTrang">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
